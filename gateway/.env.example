PORT=3000

# =============================================================================
# CLI Binary Paths
# =============================================================================
# Use the binary name if it's in your PATH, or specify full path
# Examples: codex, ~/.nvm/versions/node/v22.17.1/bin/codex, /usr/local/bin/codex

# Codex CLI (OpenAI GPT-5)
# Install: npm install -g @openai/codex-cli
CODEX_BIN_PATH=codex

# Claude Code CLI (Anthropic Claude)
# Install: https://github.com/anthropics/claude-code
CLAUDE_BIN_PATH=claude

# Gemini CLI (Google Gemini)
# Install: https://github.com/google-gemini/gemini-cli
GEMINI_BIN_PATH=gemini

# =============================================================================
# Default Backend & Model Settings
# =============================================================================
# Which backend to use by default:
# CLI: codex, claude-cli, gemini-cli
# API: openai-api, anthropic-api, gemini-api
DEFAULT_BACKEND=codex

# Default model for Gemini CLI (used when no model specified)
GEMINI_DEFAULT_MODEL=gemini-2.5-pro

# =============================================================================
# API Keys (Optional - for API backends)
# =============================================================================
# Leave empty to disable that API backend

# OpenAI API
OPENAI_API_KEY=
OPENAI_DEFAULT_MODEL=gpt-5.1
# OPENAI_BASE_URL=  # Optional: for proxies or custom endpoints

# Anthropic API
ANTHROPIC_API_KEY=
ANTHROPIC_DEFAULT_MODEL=claude-sonnet-4-5-20250929
# ANTHROPIC_BASE_URL=  # Optional: for proxies or custom endpoints

# Google Gemini API
GEMINI_API_KEY=
GEMINI_API_DEFAULT_MODEL=gemini-2.5-pro
# GEMINI_API_BASE_URL=  # Optional: for proxies or custom endpoints

# API request timeout in milliseconds (default: 2 minutes)
API_TIMEOUT_MS=120000

# =============================================================================
# Authentication
# =============================================================================
# JWT secret for signing tokens. Generate with: openssl rand -base64 32
JWT_SECRET=your-secret-key-here
JWT_ISSUER=llm-remote-runner

# Admin password hash - DO NOT SET MANUALLY
# Run: pnpm tsx scripts/setup-auth.ts
# This script will generate and set ADMIN_PASSWORD_HASH for you
ADMIN_PASSWORD_HASH=

# =============================================================================
# Rate Limiting & Performance
# =============================================================================
RATE_LIMIT_POINTS=60
RATE_LIMIT_DURATION=60
TASK_HEARTBEAT_MS=15000

# =============================================================================
# Workspace
# =============================================================================
# Default workspace directory for tasks
# Use ~ for home directory or absolute path
DEFAULT_WORKSPACE=~/llm-workspace
